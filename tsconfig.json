{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./lib/es6",
    "moduleResolution": "nodenext",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"],
  "ts-node": {
    "esm": true
  }
}
